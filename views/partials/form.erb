<form class="" action="/<%= @song[:id] %>" method="post">
  <div class="">
    <label>Title:</label>
    <input type="text" value="<%= @song[:title]%>" name="title" placeholder="Enter a title">
  </div>
  <div class="">
    <label>Body:</label>
    <textarea name="body" rows="8" cols="80" placeholder="Enter the song"><%=@song[:body] %> </textarea>
  </div>
  <div class="">
    <label>Youtube Link:</label>
    <input type="text" name="video_link" value="<%=@song[:embed_id] %>" size=80>
  </div>
  <div class="">
    <% if(@song[:id])!="" %>
    <input type="hidden" name="_method" value="PUT">
    <% end %>
    <input type="submit" value="Save Song">
  </div>
</form>
